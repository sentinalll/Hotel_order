<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.epam.controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminLogin</servlet-name>
        <jsp-file>/jsp/admin.jsp</jsp-file>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>adminLogin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/hoteldb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <filter>
        <filter-name>emptyReg</filter-name>
        <filter-class>ua.epam.filter.FilterEmptyRegister</filter-class>
    </filter>
    <filter>
        <filter-name>correctData</filter-name>
        <filter-class>ua.epam.filter.FilterCorrectOrderData</filter-class>
    </filter>
    <filter>
        <filter-name>inputLogin</filter-name>
        <filter-class>ua.epam.filter.FilterEmptyInputLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>emptyReg</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>correctData</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>inputLogin</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/jsp/error.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
